<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %> 
<h3> <%= @song.name %> is performed by <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a></h3>

<h3> <%= @song.name %> has the following genres. </h3>
<% @song.genres.each do |genre| %>
  <a href="/genres/<%= genre.slug %>"><%= genre.name %> </a>
<% end %>